<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1_black_24dp"
            android:id="@+id/plus_chambre_maison"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="1 chambre(s)"
            android:textAlignment="center"
            android:id="@+id/chambre_text_maison"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_neg_1_black_24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/moins_chambre_maison"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/plus_etage_maison"

            />

        <TextView
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="1 ére étage "
            android:textAlignment="center"
            android:id="@+id/etage_text_maison"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_neg_1_black_24dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/moins_etage_maison"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jardin"
            android:layout_weight="1"
            android:id="@+id/jardin_recherche"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piscine"
            android:layout_weight="1"
            android:id="@+id/piscine_recherche"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garage"
            android:layout_weight="1"
            android:id="@+id/garage_recherche"
            />


    </LinearLayout>


</LinearLayout>