<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width=
    "match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ekrili_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ajouter ton avis "
        android:fontFamily="monospace"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <RatingBar
        android:id="@+id/raiting_avis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:max="5"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:numStars="5"
        />

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/comment_avis"
        android:hint="commentaire ici ..."
        android:textAlignment="center"
        />

</LinearLayout>